<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%=  link_to "Keywords", keywords_path  %>
    </li>
    <li class="breadcrumb-item active" aria-current="page">Keyword details</li>
  </ol>
</nav>

<div class="card">
  <div class="card-header text-center">
    <h2><%= keyword.keyword %></h2>
  </div>
  <div class="card-body">
    <dl class="row">
      <dt class="offset-sm-4 col-lg-2">Status</dt>
      <dd class="col-lg-4"><%= keyword.status %></dd>
      <% if keyword.processed? %>
        <dt class="offset-sm-4 col-lg-2">Total links</dt>
        <dd class="col-lg-4"><%= keyword.total_links_count %></dd>
        <dt class="offset-sm-4 col-lg-2">Total advertising</dt>
        <dd class="col-lg-4"><%= keyword.total_ads_count %></dd>
        <dt class="offset-sm-4 col-lg-2">Search results</dt>
        <dd class="col-lg-4"><%= keyword.total_search_results %></dd>
      <% end %>
    </dl>
    <% if keyword.processed? %>
      <p>
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseHTML" aria-expanded="false" aria-controls="collapseHTML">
          Click to see rendered HTML
        </button>
      </p>
      <div>
        <div class="collapse collapse-horizontal" id="collapseHTML">
          <iframe srcdoc="<%= keyword.html %>" title="Search results" height="600px" width="100%"></iframe>
        </div>
      </div>
    <% end %>
  </div>
  <div class="card-footer text-muted text-center">
    <%= keyword.updated_at.strftime("%Y-%m-%d %H:%M") %>
  </div>
</div>
